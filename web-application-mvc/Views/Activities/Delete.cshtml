@model Core.Activity

<h3 class="red" style="margin-bottom: 20px">Вы действительно хотите удалить данное посещение?</h3>
<div>
    <dl class="dl-horizontal">
        <dt class="dark-blue">
            @Html.Label("ФИО студента")
        </dt>
        <dd>
            @Html.ActionLink(Model.User.Surname, "Details", "Users", new { id = Model.User.ID }, null)
            @Html.ActionLink(Model.User.Name, "Details", "Users", new { id = Model.User.ID }, null)
            @Html.ActionLink(Model.User.Midname, "Details", "Users", new { id = Model.User.ID }, null)
        </dd>
        <dt class="dark-blue">
            @Html.Label("Дата")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Список посещений", "Index")
        </div>
    }
</div>
