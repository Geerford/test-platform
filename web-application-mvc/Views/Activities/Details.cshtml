@model Core.Activity

<h2 class="red">Посещение</h2>
<hr />
<dl class="dl-horizontal">
    <dt class="dark-blue">
        @Html.Label("ФИО студента")
    </dt>
    <dd>
        @Html.ActionLink(Model.User.Surname, "Details", "Users", new { id = Model.User.ID }, null)
        @Html.ActionLink(Model.User.Name, "Details", "Users", new { id = Model.User.ID }, null)
        @Html.ActionLink(Model.User.Midname, "Details", "Users", new { id = Model.User.ID }, null)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Дата")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Date)
    </dd>
</dl>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID }, new { @class = "btn btn-default"}) |
    @Html.ActionLink("Список посещений", "Index")
</p>