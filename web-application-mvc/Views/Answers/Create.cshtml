@model Core.Answer

<h2>Добавить</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ответ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Название")
            @Html.Label("Правильный ответ")
            @Html.Label("Вопрос")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Desctiption, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Desctiption, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Правильный ответ")
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Correct)
                    @Html.ValidationMessageFor(model => model.Correct, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Вопрос")
            <div class="col-md-10">
                @Html.DropDownList("QuestionID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuestionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Список ответов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
