@model Core.Answer
<h3 class="red">Вы действительно хотите удалить данный ответ?</h3>
<hr />
<dl class="dl-horizontal">
    <dt class="dark-blue">
        @Html.Label("Вопрос")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Question.Description)
    </dd>

    <dt class="dark-blue">
        @Html.Label("Название")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Desctiption)
    </dd>

    <dt class="dark-blue">
        @Html.Label("Правильный ответ")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Correct)
    </dd>

</dl>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Список ответов", "Index")
    </div>
}
