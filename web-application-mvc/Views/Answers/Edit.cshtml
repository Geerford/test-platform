@model Core.Answer
<h2 class="red">Редактировать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="red">Ответ</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="dark-blue col-md-1">
            @Html.Label("Название")
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Desctiption, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Desctiption, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="dark-blue col-md-1">
            @Html.Label("Правильный ответ")
        </div>
        <div class="col-md-10">
            <div class="checkbox" style="margin-left: 20px">
                @Html.EditorFor(model => model.Correct)
                @Html.ValidationMessageFor(model => model.Correct, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="dark-blue col-md-1">
            @Html.Label("Вопрос")
        </div>
        <div class="col-md-10">
            @Html.DropDownList("QuestionID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.QuestionID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
            @Html.ActionLink("Список ответов", "Index")
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
