@model Core.Course

<h3 class="red">Вы действительно хотите удалить данный материал?</h3>
<hr />
<dl class="dl-horizontal">
    <dt class="dark-blue">
        @Html.Label("Описание")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Раздел")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Section.Description)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Ссылка")
    </dt>
    <dd>
        @Html.ActionLink(Model.Link, "Uploads/" + Model.Link, "Content")
    </dd>
</dl>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Список лекций", "Index")
    </div>
}