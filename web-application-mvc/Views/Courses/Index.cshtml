@model IEnumerable<Core.Course>

<h2>Учебные материалы</h2>
<table class="table">
    <tr class="light-blue">
        <th>
            @Html.Label("Описание")
        </th>
        <th>
            @Html.Label("Раздел")
        </th>
        <th>
            @Html.Label("Ссылка на материал")
        </th>
        <th>
            @Html.Label("Действия")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Description, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink(item.Section.Description, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink("Ссылка", "Details", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-default" })