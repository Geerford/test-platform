@model Core.Curator

<h2>Добавить</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Куратор", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (ViewBag.Students != null)
        {
            <div class="form-group">
                @Html.Label("Студенты", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @foreach (Core.User item in ViewBag.Students)
                    {
                        <div style="padding-right:15px;margin-left:200px">
                            <input id="@item.ID" type="checkbox" name="students" value="@item.ID" />
                            <label for="@item.ID">
                                @Html.ActionLink(item.Surname + " " + item.Name, "Details", "Users", 
                                    new { id = item.ID }, new { })
                            </label>
                        </div>
                    }
                </div>
            </div>
         }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Список кураторов", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}