@model Core.Question
    <h2 class="red">Вопрос</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt class="dark-blue">
            @Html.Label("Название")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Description)
        </dd>

        <dt class="dark-blue">
            @Html.Label("Тест")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Test.Title)
        </dd>
        <dt class="dark-blue">
            @Html.DisplayNameFor(model => model.Description)
            @Html.Label("Тип")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID }, new { @class = "btn btn-default"}) |
    @Html.ActionLink("Список вопросов", "Index")
</p>
