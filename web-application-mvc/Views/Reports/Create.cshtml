@model web_application_mvc.Models.ReportTemplateViewModel

<h2>Создать отчет</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Студент", htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-4">
                @Html.DropDownList("ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>
        @foreach(var item in Model.Templates)
        {
            <div class="form-group">
                <label class="control-label col-md-8 template" for=@item.Key>@item.Key</label>
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.Templates[item.Key], new { @class = "form-control" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Список отчетов", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}