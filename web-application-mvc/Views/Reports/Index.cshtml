@model IEnumerable<Core.Report>

<h2>Список отчетов</h2>
<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Фамилия")
        </th>
        <th>
            @Html.Label("Имя")
        </th>
        <th>
            @Html.Label("Отчество")
        </th>
        <th>
            @Html.Label("Группа")
        </th>
        <th>
            @Html.Label("Ссылка")
        </th>
        <th>
            @Html.Label("Действия")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.User.Surname, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink(item.User.Name, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink(item.User.Midname, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink(item.User.Group.Description, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink(item.Link, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Подробнее", "Details", new { id = item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
        </td>
    </tr>
}
</table>