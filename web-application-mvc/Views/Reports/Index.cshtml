                    @Html.ActionLink("Редактировать", "EditGroup", new { id = item.ID }) |
                    @Html.ActionLink("Подробнее", "DetailsGroup", new { id = item.ID }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    }
</table>
