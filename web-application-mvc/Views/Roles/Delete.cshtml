@model Core.Role

<h2 class="red">Вы действительно хотите удалить данную роль?</h2>
<dl class="dl-horizontal">
    <dt class="dark-blue">
        @Html.Label("Название")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Value)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Описание")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Description)
    </dd>
</dl>
@if (Model.Users != null && Model.Users.Count() > 0)
{
    <table class="table">
        <tr class="light-blue">
            <th>
                @Html.Label("Имя")
            </th>
            <th>
                @Html.Label("Фамилия")
            </th>
            <th>
                @Html.Label("Электронная почта")
            </th>
            <th>
                @Html.Label("Телефон")
            </th>
        </tr>
        @foreach (Core.User item in Model.Users)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Users", new { id = item.ID }, null)
                </td>
                <td>
                    @Html.ActionLink(item.Surname, "Details", "Users", new { id = item.ID }, null)
                </td>
                <td>
                    @Html.ActionLink(item.Email, "Details", "Users", new { id = item.ID }, null)
                </td>
                <td>
                    @Html.ActionLink(item.Phone, "Details", "Users", new { id = item.ID }, null)
                </td>
            </tr>
        }
    </table>
    <hr />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Список ролей", "Index")
    </div>
}