@model IEnumerable<Core.Template>

<h2 class="red">Шаблоны</h2>

<h4 class="dark-blue roboto">Данный раздел предназначен для создания характеристических шаблонов, по которым будут формироваться отчеты </h4>
<table class="table">
    <tr class="light-blue">
        <th>
            @Html.Label("Описание")
        </th>
        <th>
            @Html.Label("Действия")
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-default" })