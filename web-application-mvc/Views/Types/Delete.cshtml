@model web_application_mvc.Models.TypeViewModel

<h2 class="red">Вы действительно хотите удалить данный тип вопроса?</h2>
<dl class="dl-horizontal">
    <dt class="dark-blue">
        @Html.Label("Название")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Type.Description)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Описание")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Type.Status)
    </dd>
</dl>
<table class="table">
    <tr class="light-blue">
        <th>
            @Html.Label("Вопрос")
        </th>
        <th>
            @Html.Label("Ответ")
        </th>
    </tr>
    @foreach (Core.Question item in Model.Questions)
    {
        <tr>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td>
                @foreach (Core.Answer answer in item.Answers)
                {
                    if (answer.Correct)
                    {
                        @Html.Raw(answer.Desctiption)
                    }
                }
            </td>
        </tr>
    }
</table>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Список типов вопроса", "Index")
    </div>
}