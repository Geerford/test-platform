@model Core.User

<h2 class="red">Пользователь</h2>
<hr />
<dl class="dl-horizontal">
    <dt class="dark-blue">
        @Html.Label("Фамилия")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Surname)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Имя")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Отчество")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Midname)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Группа")
    </dt>
    <dd>
        @if (Model.Group != null)
        {
            @Html.ActionLink(Model.Group.Description, "Details", "Groups", new { id = Model.Group.ID }, null)
        }
    </dd>
    <dt class="dark-blue">
        @Html.Label("Роль")
    </dt>
    <dd>
        @if (Model.Role != null)
        {
            @Html.ActionLink(Model.Role.Value, "Details", "Roles", new { id = Model.Role.ID }, null)
        }
    </dd>
    <dt class="dark-blue">
        @Html.Label("Электронная почта")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Пароль")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Password)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Телефон")
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Phone)
    </dd>
    <dt class="dark-blue">
        @Html.Label("Статус")
    </dt>
    <dd>
        @if (Model.Status)
        {
            @Html.Raw("Активирован")
        }
        else
        {
            @Html.Raw("Деактивирован")
        }
    </dd>
    <dt class="dark-blue">
        @Html.Label("Куратор")
    </dt>
    <dd>
        @if (Model.CurrentCurator != null)
        {
            @Html.ActionLink(Model.CurrentCurator.User.Surname, "Details", "Users", new { id = Model.CurrentCurator.User.ID }, null)
        }
    </dd>
</dl>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID }, new { @class = "btn btn-default"}) |
    @Html.ActionLink("Список пользователей", "Index")
</p>